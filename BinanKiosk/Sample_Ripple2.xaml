<Page
    x:Class="BinanKiosk.Sample_Ripple2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BinanKiosk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid x:Name="MyGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Tapped="Grid_Tapped" PointerPressed="MyGrid_PointerPressed">
		<!--<TextBlock x:Name="MyTextBlock" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
		<Canvas x:Name="MyCanvas" Tapped="MyCanvas_Tapped" >
			<Image Canvas.ZIndex="1" x:Name="MyImage" Source="ms-appx:///Assets/ripple.gif" Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
		</Canvas>
		
	</Grid>
</Page>
